@model IPagedList<S00132671CA2.Models.Movie>

@{
    ViewBag.Title = "Index";
}





        @Html.Partial("_Movies", Model)

  
<div class="modal fade" id="HelperModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class=" col-xs-12 col-sm-4" id="Placement">

    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            var my = '@ViewBag.message'

            switch (my) {
                case "Warning":
                    toastr.error('That is not the page you are looking for Luke');
                    break;

                case "DataError":
                    toastr.error('That actor is already listed for this movie.');
                    break;
                case "Success":
                    toastr.success('Thanks for adding this movie');

            }

        });


    function createMovie() {
    $('#Placement').load('@Url.Action("Create","Home")').show();
    $('#HelperModal').modal('show');
    }

    function createActor() {
        $('#Placement').load('@Url.Action("Create", "Actor")').show();
        $('#HelperModal').modal('show');
    }
    </script>
}






















    




