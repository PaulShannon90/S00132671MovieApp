@model PagedList<S00132671CA2.Models.Actor>






<div class="container" id="actorList">
    <div class="pagedList text-center row" style="margin-bottom:10px;" data-myscripts-target="#actorList">
        @Html.PagedListPager(Model, page => Url.Action("Index", "Actor", new { page }),
        PagedListRenderOptions.MinimalWithItemCountText)

        <form method="get" action="@Url.Action("Index")" data-myscripts-ajax="true" data-myscripts-target="#actorList">

            <input class="" type="search" name="searchTerm" data-myscripts-autocomplete="@Url.Action("Autocomplete")" />
            <input style="margin-bottom:5px;" class="btn btn-primary btn-sm" type="submit" value="Search By Name" />

        </form>
    </div>
    <div class="row">


        @foreach (var item in Model)
        {



            <div style=" margin: 10px;" class="hidden-md hidden-lg">
                <div class="thumbnail">
                    <img style="height:200px;max-width:200px;" class=" img-responsive img-circle" src="@item.ActorImage" alt="...">
                    <div class="caption">
                        <h3>@item.ActorName</h3>
                        <p>@item.Bio</p>
                        <p><a href="" class="btn btn-primary" role="button">Button</a> <a href="#" class="btn btn-default" role="button">Button</a></p>
                    </div>
                </div>
            </div>


            <div style=" margin: 10px;" class="col-md-3 col-lg-3 hidden-sm hidden-xs">
                <div class="thumbnail" style="height:450px;">
                    <img style="height:200px;max-width:200px;" class=" img-responsive img-circle" src="@item.ActorImage" alt="...">
                    <div class="caption">
                        <h3>@item.ActorName</h3>
                        <textarea style="height: 150px; background-color:#2b3e50; color:#ebebeb;" disabled class="form-control">@item.Bio</textarea>
                    </div>
                </div>
            </div>





        }
    </div>
</div>

