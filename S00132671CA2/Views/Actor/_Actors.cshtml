@model PagedList<S00132671CA2.Models.Actor>





<div class="container" id="actorList">
    <div class="pagedList text-center row" style="margin-bottom:10px;" data-myscripts-target="#actorList">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }),
        PagedListRenderOptions.MinimalWithItemCountText)

        <div style="margin-bottom:5px;" class="btn-group">
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                Sort By Name <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" role="menu">
                <li>
                    @Ajax.ActionLink("Descending",
                 "Index",
                 new { sortOrder = "descending" },
                 new AjaxOptions
                 {
                     UpdateTargetId = "actorList", //
                     InsertionMode = InsertionMode.Replace, //
                     HttpMethod = "GET" //
                 }, new { @class = "btn btn-sm btn-default", })
            </li>
            <li>
                @Ajax.ActionLink("Ascending",
                 "Index",
                 new { sortOrder = "ascending" },
                 new AjaxOptions
                 {
                     UpdateTargetId = "actorList", //
                     InsertionMode = InsertionMode.Replace, //
                     HttpMethod = "GET",
                     //
                 }, new { @class = "btn btn-default", })
        </li>

    </ul>
    </div>


        <form method="get" action="@Url.Action("Index")" data-myscripts-ajax="true" data-myscripts-target="#actorList">

            <input class="" type="search" name="searchTerm" data-myscripts-autocomplete="@Url.Action("Autocomplete")" />
            <input style="margin-bottom:5px;" class="btn btn-primary btn-sm" type="submit" value="Search By Name" />

        </form>
    </div>


    <div class="row">


        @foreach (var item in Model)
        {


            <a style="text-decoration: none;" href="@Url.Action("Details", new { id = @item.ActorId })">
                <div style=" margin: 10px;" class="hidden-md hidden-lg">
                    <div class="thumbnail">
                        <img onclick="showMovies(@item.ActorId)" style="height:200px;max-width:200px;" class=" img-responsive img-circle " src="@item.ActorImage" alt="...">
                        <div class="caption">
                            <h3>@item.ActorName</h3>
                            <p>@item.Bio</p>
                            <p>
                               
                            </p>
                        </div>
                    </div>
                  
                </div>
            </a>

   
        <div style=" margin: 10px;" class="col-md-3 col-lg-3 hidden-sm hidden-xs">
            <div class="thumbnail" style="height:450px;">
                <a href="@Url.Action("Details", new { id = @item.ActorId })">
                    <img style="height:200px;max-width:200px;" class=" img-responsive img-circle" src="@item.ActorImage" alt="...">
                </a>
                    <div class="caption">

                        <h3>@item.ActorName</h3>
                        <textarea style="height: 150px; cursor: pointer;  background-color:#2b3e50; color:#ebebeb;" disabled class="form-control">@item.Bio</textarea>
                    </div>
</div>
        </div>

    






        }
    </div>
</div>



